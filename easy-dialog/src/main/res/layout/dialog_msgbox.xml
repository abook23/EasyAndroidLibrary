<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_dialog_white"
        android:minHeight="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msgbox_title"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="18dp"
            android:text="Mesg Label"
            android:textColor="@color/color_blue"
            android:textSize="18sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80sp">

            <TextView
                android:id="@+id/msgbox_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:lineSpacingExtra="4dp"
                android:text="Dialog\nContent"
                android:textColor="#343434"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/but_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="18dp"
                android:background="@color/transparent"
                android:text="确定"
                android:textColor="@color/color_blue"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/but_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:layout_marginRight="8dp"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@color/transparent"
                android:text="取消"
                android:textColor="@color/color_blue"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/but_ok"
                android:layout_toStartOf="@+id/but_ok" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
